<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.spudg.kalk">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Kalk">
        <activity
            android:theme="@style/Kalk"
            android:screenOrientation="portrait"
            android:name=".PercentageCalculator"/>
        <activity
            android:theme="@style/Kalk"
            android:screenOrientation="portrait"
            android:name=".InvestmentReturnCalculator" />
        <activity
            android:theme="@style/Kalk"
            android:screenOrientation="portrait"
            android:name=".CompoundInterestCalculator" />
        <activity
            android:theme="@style/Kalk"
            android:screenOrientation="portrait"
            android:name=".LoanCalculator" />
        <activity
            android:theme="@style/Kalk"
            android:screenOrientation="portrait"
            android:name=".MortgageCalculator" />
        <activity
            android:theme="@style/Kalk"
            android:screenOrientation="portrait"
            android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>