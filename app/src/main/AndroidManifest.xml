<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.spudg.kalk">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Kalk">
        <activity android:name=".FICalculator"></activity>
        <activity android:name=".NetWorthCalculator" />
        <activity
            android:name=".PercentageCalculator"
            android:screenOrientation="portrait"
            android:theme="@style/Kalk" />
        <activity
            android:name=".CompoundInterestCalculator"
            android:screenOrientation="portrait"
            android:theme="@style/Kalk" />
        <activity
            android:name=".MortgageLoanCalculator"
            android:screenOrientation="portrait"
            android:theme="@style/Kalk" />
        <activity
            android:name=".MortgageRepaymentCalculator"
            android:screenOrientation="portrait"
            android:theme="@style/Kalk" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Kalk">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>