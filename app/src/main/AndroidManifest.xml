<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.spudg.calculat">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Calculat">
        <activity
            android:name="com.spudg.calculat.AboutActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Calculat" />
        <activity
            android:name="com.spudg.calculat.FICalculator"
            android:screenOrientation="portrait"
            android:theme="@style/Calculat" />
        <activity
            android:name="com.spudg.calculat.NetWorthCalculator"
            android:screenOrientation="portrait"
            android:theme="@style/Calculat" />
        <activity
            android:name="com.spudg.calculat.PercentageCalculator"
            android:screenOrientation="portrait"
            android:theme="@style/Calculat" />
        <activity
            android:name="com.spudg.calculat.CompoundInterestCalculator"
            android:screenOrientation="portrait"
            android:theme="@style/Calculat" />
        <activity
            android:name="com.spudg.calculat.MortgageLoanCalculator"
            android:screenOrientation="portrait"
            android:theme="@style/Calculat" />
        <activity
            android:name="com.spudg.calculat.MortgageRepaymentCalculator"
            android:screenOrientation="portrait"
            android:theme="@style/Calculat" />
        <activity
            android:name="com.spudg.calculat.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Calculat">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>